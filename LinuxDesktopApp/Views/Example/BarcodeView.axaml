<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="http://smart/avalonia"
             xmlns:local="clr-namespace:LinuxDesktopApp.Views.Example"
             mc:Ignorable="d"
             x:Class="LinuxDesktopApp.Views.Example.BarcodeView"
             x:DataType="local:BarcodeViewModel"
             s:DataContextResolver.Type="local:BarcodeViewModel"
             d:DesignWidth="1920" d:DesignHeight="1020"
             Height="1020">

    <Grid RowDefinitions="*,Auto">

        <Label Grid.Row="0"
               Content="{Binding Barcode}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="72"
               FontWeight="Bold"/>

        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              Height="60">
            <Button Grid.Column="0"
                    Content="Resume"
                    Command="{Binding ResumeCommand}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Grid.Column="1"
                    Content="Pause"
                    Command="{Binding PauseCommand}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
        </Grid>

    </Grid>

</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="http://smart/avalonia"
             xmlns:local="clr-namespace:LinuxDesktopApp.Views.Example"
             mc:Ignorable="d"
             x:Class="LinuxDesktopApp.Views.Example.MenuView"
             x:DataType="local:MenuViewModel"
             s:DataContextResolver.Type="local:MenuViewModel"
             d:DesignWidth="1920" d:DesignHeight="1080">

    <StackPanel>
        <Label Content="{Binding Message}" />

        <WrapPanel>
            <Button Command="{Binding NavigateToDashboardCommand}" Content="Dashboard" Margin="0,0,8,8" />
            <Button Command="{Binding NavigateToTypographyCommand}" Content="Typography" Margin="0,0,8,8" />
            <Button Command="{Binding NavigateToBarcodeCommand}" Content="Barcode" Margin="0,0,8,8" />
            <Button Command="{Binding NavigateToCameraCommand}" Content="Camera" Margin="0,0,8,8" />
            <Button Command="{Binding NavigateToPrinterCommand}" Content="Printer" Margin="0,0,8,8" />
        </WrapPanel>

    </StackPanel>

</UserControl>

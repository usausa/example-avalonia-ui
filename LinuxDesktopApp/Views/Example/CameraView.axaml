<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="http://smart/avalonia"
             xmlns:local="clr-namespace:LinuxDesktopApp.Views.Example"
             xmlns:controls="clr-namespace:LinuxDesktopApp.Controls"
             mc:Ignorable="d"
             x:Class="LinuxDesktopApp.Views.Example.CameraView"
             x:DataType="local:CameraViewModel"
             s:DataContextResolver.Type="local:CameraViewModel"
             d:DesignWidth="1920" d:DesignHeight="1020"
             Height="1020">

    <Grid RowDefinitions="*,Auto">

        <Image Grid.Row="0"
               Width="1280"
               Height="960"
               Stretch="Uniform"
               Source="{Binding Bitmap}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" />

        <controls:FaceBoxOverlay Grid.Row="0"
                                 Width="1280"
                                 Height="960"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FaceBoxes="{Binding FaceBoxes}" />

        <Grid Grid.Row="0"
              ColumnDefinitions="*,1280,*">
        <Border Grid.Column="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="3"
                Background="#40000000"
                BorderBrush="#C0FFFFFF"
                BorderThickness="1"
                CornerRadius="3"
                Padding="3">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="FPS:"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="{Binding Fps, StringFormat={}{0:F1}}"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"
                           Width="36"
                           TextAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="GC0/s:"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{Binding Gc0PerSec, StringFormat={}{0:F1}}"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"
                           Width="36"
                           TextAlignment="Right"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="GC1/s:"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{Binding Gc1PerSec, StringFormat={}{0:F1}}"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"
                           Width="36"
                           TextAlignment="Right"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="GC2/s:"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="{Binding Gc2PerSec, StringFormat={}{0:F1}}"
                           Foreground="White"
                           FontFamily="monospace"
                           FontSize="12"
                           Width="36"
                           TextAlignment="Right"/>
            </Grid>
        </Border>
        </Grid>

        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              Height="60">
            <Button Grid.Column="0"
                    Content="Start"
                    Command="{Binding StartCommand}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Grid.Column="1"
                    Content="Stop"
                    Command="{Binding StopCommand}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
        </Grid>

    </Grid>

</UserControl>

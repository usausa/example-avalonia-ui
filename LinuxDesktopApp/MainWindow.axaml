<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="http://smart/avalonia"
        xmlns:navigation="http://smart/navigation"
        xmlns:app="using:LinuxDesktopApp"
        xmlns:markup="clr-namespace:LinuxDesktopApp.Markup"
        mc:Ignorable="d"
        x:Class="LinuxDesktopApp.MainWindow"
        x:DataType="app:MainWindowViewModel"
        s:DataContextResolver.Type="app:MainWindowViewModel"
        Width="1920" Height="1080"
        d:DesignWidth="1920" d:DesignHeight="1080"
        CanResize="True"
        Title="LinuxDesktopApp"
        Icon="/Assets/avalonia-logo.ico">

    <Grid RowDefinitions="60,*">
        <WrapPanel Grid.Row="0" Height="60">
            <Button Command="{Binding ForwardCommand}"
                    CommandParameter="{markup:ViewId Dashboard}"
                    Content="Dashboard"
                    Width="240"
                    Height="60"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Command="{Binding ForwardCommand}"
                    CommandParameter="{markup:ViewId Typography}"
                    Content="Typography"
                    Width="240"
                    Height="60"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Command="{Binding ForwardCommand}"
                    CommandParameter="{markup:ViewId Barcode}"
                    Content="Barcode"
                    Width="240"
                    Height="60"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Command="{Binding ForwardCommand}"
                    CommandParameter="{markup:ViewId Camera}"
                    Content="Camera"
                    Width="240"
                    Height="60"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
            <Button Command="{Binding ForwardCommand}"
                    CommandParameter="{markup:ViewId Printer}"
                    Content="Printer"
                    Width="240"
                    Height="60"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="24" />
        </WrapPanel>

        <Canvas Grid.Row="1" navigation:NavigationContainer.Navigator="{Binding Navigator}" />
    </Grid>

</Window>
